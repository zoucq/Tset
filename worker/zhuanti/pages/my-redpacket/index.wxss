.container{
    width: 100%;
    height: 100vh;
    background: #E8E9F2;
}


.top{
    display: flex;
    justify-content: center;
    align-items: center;
    height:60rpx; 
    background:rgba(245,239,239,1);
    font-size: 28rpx;
    color: #E9534A;
}


.panel{
    display: flex;
    height: auto;
    background: #fff;
    padding: 32rpx 36rpx 8rpx 36rpx;
}
.panel .ul {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-end;
}
.panel .ul .li{
    display: flex; 
    width: 144rpx; 
    height: 178rpx;
    background:rgba(233,83,74,1);
    box-shadow: 0px 0px 8rpx 0px rgba(197,0,0,0.49) ;
    border-radius: 8rpx ; 
    margin-right: 32rpx;
    margin-bottom: 34rpx;
}
.panel .ul .li.disabled{
    opacity: 0.4;
}
.panel .ul .li.open{
    height: 215rpx;
}
.panel .ul .li:nth-of-type(4n){
     margin-right: 0; 
}
.panel .ul .li image{
    width: 100%;height: 100%;
}


.total{
    width: 100%;height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.total .money{
    margin-top: 60rpx;
    font-size: 54rpx;
    color: #303030;
    font-weight: 400;
    margin-bottom: 8rpx;
}
.total .use{
    -webkit-border-radius: 6rpx;
    -moz-border-radius: 6rpx;
    border-radius: 6rpx;
    padding: 0 20rpx; 
    height: 48rpx; 
    text-align: center;
    display: flex;
    align-items: center;
}
.total .use > view{
    display: inline-block;
    font-size: 32rpx;
    color: #5575C6;
}
.total .use > image{
    width: 16rpx;height: 28rpx;
    display: inline-block;
    margin-left: 16rpx;
    transform: rotate(-90deg);
}

.total .btn{
    display: flex;
    align-items: center;
    justify-content: center;
    width:540rpx;
    height:100rpx; 
    background:#FD9F2B;
    border-radius: 8rpx ;
    font-size:32rpx;
    color:rgba(255,255,255,1);
    margin-top: 80rpx;
}