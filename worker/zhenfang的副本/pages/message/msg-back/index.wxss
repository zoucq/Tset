.container{
    display: flex;
    flex-direction: column;
}
.container .body-view{
    position: fixed;
    top: 1px;left: 0;
    width: 100%;
    background: #fff;
    text-align: center;
    padding: 20rpx 0 20rpx 0;
    font-size: 28rpx;
    color: #BBBCCD;
}
.container .boxs{
    display: flex;
    flex-direction: column;
    padding: 22rpx 32rpx 0 32rpx;
    margin-bottom:20rpx;
}
.container .boxs .now-time{
    display: flex;
    justify-content: center;
    width: 100%;
    /* padding: 24rpx 0 34rpx 0; */
}
.container .boxs .now-time text{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 18rpx;
    height: 48rpx;
    background: #E5E6F3;
    border-radius: 8rpx;
    color: #BCBDCE;
    font-size: 28rpx;
}
.container .boxs .item{
    display: flex;
    flex-direction: column;
    width: 100%;
    background: #fff;
    padding: 20rpx 40rpx 24rpx 40rpx;
    margin-bottom: 40rpx;
    font-size: 28rpx;
    position: relative;
    border-radius: 12rpx; 
    margin-top: 40rpx;
}
.container .boxs .item .agree{
    position: absolute;
    right: 0;top: 0;
    display: inline-block;
    width: 110rpx;height: 110rpx;
    text-align: center;
    border-radius: 12rpx;
    color: #fff;
    background: #fff;
    font-size: 28rpx;
    white-space: nowrap;
}
.container .boxs .item .agree image{
    width: 100%;height: 100%;
}


.container .boxs .item .top{
    font-size: 28rpx;
    color: #828393;
    padding-bottom: 40rpx;
}

.container .boxs .item .center{
    display: flex;
    font-size: 32rpx;
    color: #3B3A4A;
}
.container .boxs .item .down{
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #5555FF;
    padding-bottom: 8rpx;
}
.container .boxs .item .down view{
    display: flex;
}

