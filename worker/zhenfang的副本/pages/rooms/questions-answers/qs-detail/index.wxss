page{
    background: #F1F2F7;
}

.container{
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
}
.question{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}
.question .item{
    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 20rpx 40rpx;
    color: #505050;
    margin-bottom: 10rpx;
}
.question .item > view:not(:last-child){
    margin-bottom: 20rpx;
}
.question .item .title{
    width: 100%;
    color: #000;
    font-weight: bold;
}
.question .item .title text{
    padding-right: 60rpx;
}
.question .item .info{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.question .item .info .time{
    color: #505050;
    padding-left: 40rpx;
}
.question .item .info .user{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}
.question .item .info .user>view{
    margin-right: 10rpx;
}
.question .item .info .user .avtor{
    width: 60rpx;height: 60rpx;
    border-radius: 50%;overflow: hidden;
    display: flex;
}
.question .item .info .user .avtor image{
    width: 100%;height: 100%;
} 
.question .item .info .huida{
    display: flex;
    justify-content: center;
    text-align: center;
}
.question .item .like{
    display: flex;
    justify-content: flex-end; 
}
.question .item .like button{
    font-size: 28rpx;
    margin: 0;
}



.answer{
    margin-bottom: 100rpx;
}
.answer .item{
    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 20rpx 40rpx;
    color: #505050;
    margin-bottom: 10rpx;
}
.answer .item > view:not(:last-child){
    margin-bottom: 20rpx;
}
.answer .item .title{
    width: 100%;
    color: #666;
    font-weight: bold;
}
.answer .item .title text{
    padding-right: 60rpx;
}
.answer .item .info{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.answer .item .info .time{
    color: #505050;
    padding-left: 20rpx;
    font-size: 24rpx;
}
.answer .item .info .user{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}
.answer .item .info .user>view{
    /* margin-right: 10rpx; */
