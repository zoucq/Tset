/**index.wxss**/
page{
    width: 100%;height: 100%;
    background:#f1f2f7 url(https://ssl.malmam.com/xiangju-static/dfs/10/322b15c7b7d13d/my_banner.png) no-repeat left top;
    background-size: cover;
    overflow: hidden;
}

.container{
    width: 100%;height: 100%;
    /* width: 100%;height: 100%;
    background: url(https://ssl.malmam.com/xiangju-static/dfs/10/322b15c7b7d13d/my_banner.png) no-repeat left top; */
}

.content{
    /* width: 100%; */
    height: 804rpx;
    /* margin-top: 212rpx; */
    margin: 212rpx 40rpx 0 40rpx;
    background: #fff;
    border: 1px solid #eee;
    border-radius: 16rpx;
    margin-bottom: 40rpx;
    position: relative;
    box-shadow: 0 20rpx 40rpx 0 rgba(0,0,0,0.15);
}
.content .user-info{
    /*164  */
    width: 174rpx;
    height: 174rpx;
    border-radius: 50%;
    background: #eee;
    border: 10rpx solid #fff;
    overflow: hidden;
    display: inline-block;
    position: absolute;
    left: 50%;
    transform: translate(-50%,-50%);
}
.content .user-info image{
    width: 100%;height: 100%;
}
.content .title{
    display: flex;
    justify-content: center;
    width: 100%;
    margin-top: 104rpx;
    margin-bottom: 40rpx;
    color: #3B3A4A;
}
.content .title text{
    color: #3B3A4A;
    font-size: 40rpx;
}
.content .ul{
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
}
.content .ul .li{
    display: flex;
    justify-content: space-between;
    padding:32rpx 0;
    font-size: 32rpx;
    color: #3B3A4A;
    border-top: 2px solid #f6f7f9;
}
.content .ul .li view:last-child text{
    color: #828393;
}
.icon-gengduo{
    color: #ff3366;
    margin-left: 16rpx;
}







.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  /* border-bottom: 1px solid #eee; */
  border-top: 1px solid #eee;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}



.user-qa {
    width: 100%;
    display: flex;
    font-size: 28rpx; 
    border-bottom: 1px solid #eee;
}
.user-qa view{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
}

.history{
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 0 40rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
}
.history .title{
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
}
.history .title text:first-child{
    color: #5555ff;
}
.history .title text:last-child{
    color: rgba(255, 87, 51, 1);
}

.history .date{
    color: #5555ff;
    margin: 20rpx 0 20rpx 106rpx;
    width: 200rpx;
    height: 80rpx;
    text-align: center;
}
.history .date text{
    text-align: center;
}

.history .list{
    display: flex;
    flex-direction: column;
    padding: 20rpx 0rpx;
    margin-top: 20rpx;
    position: relative;
}
.history .list:before{
    content: '';
    width: 2px;height: 100%;
    background: #999;
    position: absolute;
    left: 200rpx;
    top: 0;
}
.history .list .item{
    display: flex;
    align-items: flex-end;
    margin-bottom:60rpx;
}
.history .list .item:before{
    content: '';
    width: 32rpx;height: 32rpx;
    background: #5555ff;
    border-radius: 50%;
    position: absolute;
    left: 200rpx;
    margin-left:-14rpx;
    margin-top: -4rpx;
}
.history .list .item text{
    flex:2;color: rgba(255, 87, 51, 1);
    text-align: center;
}
.history .list .item text:first-child{
    color: #5555ff;
}
.history .list .item text:last-child{
    text-align: center;
}
.history .list .item view{
    flex: 2;
    text-align: right;
}
.icon-gengduo{
    font-size: 28rpx;
    color: #999;
    padding-left: 6rpx;
    margin-top: -6rpx;
}
