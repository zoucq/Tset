page{
    background:#F1F2F7;
    border-top: 1px solid #E4E7F0;
}
.container{
    display: flex; 
    flex-direction: column;
    width: 100%;height: 100%;
}
.room-state{
    display: flex;
    flex-direction: column;
}

.room-state .item{
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    padding: 32rpx 54rpx 30rpx 54rpx;
    background: #fff;
    margin-top: 20rpx;
}

.room-state .item .title{
    width: 100%;
    color: #3B3A4A;
    font-size: 32rpx;
    margin-bottom: 24rpx;
}
.room-state .item .desc{
    width: 100%;
    color: #828393;
    font-size: 28rpx;
    margin-bottom: 36rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow : hidden;
    text-overflow: ellipsis;
}
.room-state .item .time{
    width: 100%;
    color: #BBBCCD;
    font-size: 24rpx;
}
