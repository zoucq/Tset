}
.answer .item .like button{
    font-size: 28rpx;
    margin: 0;
}
.answer .item .info .bj{
    border: 1px solid #5555ff;
    font-size: 24rpx;
    padding: 4rpx 6rpx;
    background: #fff;
    margin-left: 20rpx;
}

.bottom{
    position: fixed;
    left: 0;bottom: 0;
    width: 100%;
    height: 100rpx;
    padding: 0 20rpx;
    background: #ccc;
    display: flex;
    align-items: center;
}
.bottom .txt{
    width: 80%;
    height: 72rpx;
    /* border: 1px solid #666; */
    border-radius: 6rpx;
    padding-left:20rpx;
    background: #fff;
    display: flex;
    align-items: center;
}
.bottom .btn{
    width: 116rpx;
    height: 66rpx;
    background: #5555ff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #fff;
    margin-left: 10rpx;
}
.noList,.noMore{
    display: flex;
    justify-content: center;
    padding: 20rpx;
    font-size: 28rpx;
    color: #666;
}



