page{
    background: #fff;
    width: 100%;height: 100%;
    overflow: hidden;
}

.map_container{ 
    height: 100%; 
    width: 100%; 
} 

.map { 
    height: 100%; 
    width: 100%; 
} 

canvas{
    width: 100%;
    box-sizing: border-box;
    border: 1px solid red;
    z-index: 999;
}

.controls{
    background: #fff;
    position: fixed;
    bottom: 0; 
    /* position: relative;
    bottom: 0; */
    left: 0;
    display: flex;
    align-items: center;
    width: 100%;
    height: 200rpx;
}

.controls .left{
    padding: 0 30rpx;
}
.controls .right{
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    height: 160rpx;
    width: 100%;
    position: relative;
}
.controls .right .tel{
    position: absolute;
    right: 60rpx;
    top: 34rpx;
    display: flex;
    width: 88rpx;height: 88rpx;
    /* background: aquamarine;
    border-radius: 50%; */
}
.controls .right .tel cover-image{
    width: 100%;height: 100%;
}

.controls .right .name{
    margin-top: 8rpx;
    font-size: 32rpx;color: #3B3A4A;
}
.controls .right .price{
    margin-top: 20rpx;
    font-size: 28rpx;color: #F25C62;
}
.controls .right .biaoqian{
    margin-top: 20rpx;
    display: flex;
}
.controls .right .biaoqian .text{
    display: flex;
    justify-content: center;align-items: center;
    padding: 0 8rpx;
    font-size: 24rpx;
    color: #9E9DA3;
    border-radius: 8rpx;
    margin-right: 12rpx;
    background: #EFEEF8;
}
.controls .img{
    width: 200rpx;height: 160rpx;
}
.controls view{
    display: flex;
}